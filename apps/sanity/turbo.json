{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": ["SANITY_STUDIO_*", "SENTRY_*"],
      "outputs": [".sanity/**"]
    },
    "generate:blocks": {},
    "generate:types": {
      "dependsOn": ["extract-schema"],
      "outputs": ["sanity.types.ts", "types/sanity-queries.ts"]
    },
    "extract-schema": {
      "outputs": ["schema.json"]
    }
  }
}
